  }

  const statusColors = {
    planerad: 'bg-gray-100 text-gray-700',
    p√•g√•ende: 'bg-blue-100 text-blue-700',
    klar: 'bg-green-100 text-green-700'
  }

  if (showPrintView) {
    const wo = (project.work_orders || []).find(w => w.id === showPrintView)
    if (!wo) {
      setShowPrintView(null)
      return null
    }

    return (
      <div className="space-y-6">
        <button
          onClick={() => setShowPrintView(null)}
          className="flex items-center gap-2 text-blue-600 hover:text-blue-800"
        >
          ‚Üê Tillbaka
        </button>
        <div className="bg-white p-8 rounded-xl border print:border-0">
          <h2 className="text-2xl font-bold mb-6">Arbetsorder</h2>
          {wo.image && (
            <img src={wo.image} alt="Arbetsorder" className="w-full max-w-md mb-4 rounded-lg" />
          )}
          <div className="space-y-4">
            <div>
              <h3 className="font-semibold text-gray-600 text-sm">Titel</h3>
              <p className="text-lg">{wo.title || '-'}</p>
            </div>
            <div>
              <h3 className="font-semibold text-gray-600 text-sm">Material</h3>
              <p>{wo.material || '-'}</p>
            </div>
            <div>
              <h3 className="font-semibold text-gray-600 text-sm">Beskrivning</h3>
              <p className="whitespace-pre-wrap">{wo.description || '-'}</p>
            </div>
            <div>
              <h3 className="font-semibold text-gray-600 text-sm">Status</h3>
              <p className="capitalize">{wo.status}</p>
            </div>
          </div>
          <button
            onClick={() => window.print()}
            className="mt-6 px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 print:hidden"
          >
            Skriv ut
          </button>
        </div>
      </div>
    )
  }

  return (
    <div className="space-y-6">
      <button
        onClick={addWorkOrder}
        className="w-full px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
      >
        + Ny arbetsorder
      </button>

      {/* Work Orders List */}
      <div className="space-y-4">
        {(project.work_orders || []).map(wo => (
          <div key={wo.id} className="bg-white p-6 rounded-xl border">
            <div className="space-y-4">
              <div className="flex justify-between items-start">
                <input
                  type="text"
                  value={wo.title}
                  onChange={(e) => updateWorkOrder(wo.id, 'title', e.target.value)}
                  placeholder="Titel..."
                  className="text-lg font-semibold flex-1 px-2 py-1 border rounded"
                />
                <button onClick={() => deleteWorkOrder(wo.id)} className="text-red-600 hover:text-red-800 ml-3">
                  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </button>
              </div>

              <input
                type="text"
                value={wo.material}
                onChange={(e) => updateWorkOrder(wo.id, 'material', e.target.value)}
                placeholder="Material..."
                className="w-full px-3 py-2 border rounded-lg"
              />

              <textarea
                value={wo.description}
                onChange={(e) => updateWorkOrder(wo.id, 'description', e.target.value)}
                placeholder="Beskrivning..."
                className="w-full px-3 py-2 border rounded-lg"
                rows="3"
              />

              {/* Image Upload */}
              <div>
                <input
                  type="file"
                  accept="image/*"
                  onChange={(e) => handleImageUpload(wo.id, e.target.files[0])}
                  className="hidden"
                  id={`upload-${wo.id}`}
                />
                <label
                  htmlFor={`upload-${wo.id}`}
                  className="inline-block px-4 py-2 bg-gray-100 rounded-lg cursor-pointer hover:bg-gray-200"
                >
                  üì∑ Ladda upp bild
                </label>
                {wo.image && (
                  <div className="mt-2 relative inline-block">
                    <img src={wo.image} alt="Preview" className="w-32 h-32 object-cover rounded-lg" />
                    <button
                      onClick={() => updateWorkOrder(wo.id, 'image', null)}
                      className="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6"
                    >
                      √ó
                    </button>
                  </div>
                )}
              </div>

              <div className="flex gap-2">
                {['planerad', 'p√•g√•ende', 'klar'].map(status => (
                  <button
                    key={status}
                    onClick={() => updateWorkOrder(wo.id, 'status', status)}
                    className={`px-3 py-1 rounded-lg text-xs font-medium ${
                      wo.status === status ? statusColors[status] : 'bg-gray-50 text-gray-400'
                    }`}
                  >
                    {status.charAt(0).toUpperCase() + status.slice(1)}
                  </button>
                ))}
                <button
                  onClick={() => setShowPrintView(wo.id)}
                  className="ml-auto px-4 py-1 bg-blue-600 text-white rounded-lg text-xs hover:bg-blue-700"
                >
                  Skriv ut
                </button>
              </div>
            </div>
          </div>
        ))}
        {(project.work_orders || []).length === 0 && (
          <div className="bg-white p-12 rounded-xl border text-center">
            <p className="text-gray-500">Inga arbetsordrar √§n</p>
          </div>
        )}
      </div>
    </div>
  )
}

function BrandTab({ project, setProject }) {
  const [newColor, setNewColor] = useState('#000000')
  const [newNote, setNewNote] = useState('')

  const handleLogoUpload = async (file) => {
    if (file) {
      const compressed = await compressImage(file)
      const brand = project.brand || { logos: [], colors: [], referenceImages: [] }
      setProject({
        ...project,
        brand: { ...brand, logos: [...brand.logos, compressed] }
      })
    }
  }

  const handleInspoUpload = async (file) => {
    if (file) {
      const compressed = await compressImage(file)
      const brand = project.brand || { logos: [], colors: [], referenceImages: [] }
      setProject({
        ...project,
        brand: { ...brand, referenceImages: [...brand.referenceImages, compressed] }
      })
    }
  }

  const removeLogo = (index) => {
    const brand = project.brand || { logos: [], colors: [], referenceImages: [] }
    setProject({
      ...project,
      brand: { ...brand, logos: brand.logos.filter((_, i) => i !== index) }
    })
  }

  const removeInspo = (index) => {
    const brand = project.brand || { logos: [], colors: [], referenceImages: [] }
    setProject({
      ...project,
      brand: { ...brand, referenceImages: brand.referenceImages.filter((_, i) => i !== index) }
    })
  }

  const addColor = () => {
    const brand = project.brand || { logos: [], colors: [], referenceImages: [] }
    setProject({
      ...project,
      brand: { ...brand, colors: [...brand.colors, newColor] }
    })
    setNewColor('#000000')
  }

  const removeColor = (index) => {
    const brand = project.brand || { logos: [], colors: [], referenceImages: [] }
    setProject({
      ...project,
      brand: { ...brand, colors: brand.colors.filter((_, i) => i !== index) }
    })
  }

  const addNote = () => {
    if (!newNote.trim()) return
    setProject({
      ...project,
      notes: [...(project.notes || []), { id: Date.now().toString(), text: newNote, createdAt: new Date().toISOString() }]
    })
    setNewNote('')
  }

  const deleteNote = (id) => {
    setProject({ ...project, notes: (project.notes || []).filter(n => n.id !== id) })
  }

  return (
    <div className="space-y-6">
      {/* Logos */}
      <div className="bg-white p-6 rounded-xl border">
        <h3 className="font-semibold mb-4">Logotyper</h3>
        <input
          type="file"
          accept="image/*"
          onChange={(e) => handleLogoUpload(e.target.files[0])}
          className="hidden"
          id="logo-upload"
        />
        <label
          htmlFor="logo-upload"
          className="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg cursor-pointer hover:bg-blue-700"
        >
          üì∑ Ladda upp logga
        </label>
        <div className="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
          {(project.brand?.logos || []).map((logo, index) => (
            <div key={index} className="group relative">
              <img src={logo} alt="Logo" className="w-full h-32 object-contain bg-gray-50 rounded-lg border" />
              <button
                onClick={() => removeLogo(index)}
                className="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 opacity-0 group-hover:opacity-100 transition"
              >
                √ó
              </button>
            </div>
          ))}
        </div>
      </div>

      {/* Colors */}
      <div className="bg-white p-6 rounded-xl border">
        <h3 className="font-semibold mb-4">Varum√§rkesf√§rger</h3>
        <div className="flex gap-3 mb-4">
          <input
            type="color"
            value={newColor}
            onChange={(e) => setNewColor(e.target.value)}
            className="w-16 h-10 rounded cursor-pointer"
          />
          <input
            type="text"
            value={newColor}
            onChange={(e) => setNewColor(e.target.value)}
            className="flex-1 px-3 py-2 border rounded-lg font-mono"
          />
          <button
            onClick={addColor}
            className="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
          >
            L√§gg till
          </button>
        </div>
        <div className="flex gap-3 flex-wrap">
          {(project.brand?.colors || []).map((color, index) => (
            <div key={index} className="group relative">
              <div
                className="w-16 h-16 rounded-lg border-2 border-gray-200"
                style={{ backgroundColor: color }}
              />
              <button
                onClick={() => removeColor(index)}
                className="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 opacity-0 group-hover:opacity-100 transition"
              >
                √ó
              </button>
              <p className="text-xs text-center mt-1 font-mono">{color}</p>
            </div>
          ))}
        </div>
      </div>

      {/* Inspiration Images */}
      <div className="bg-white p-6 rounded-xl border">
        <h3 className="font-semibold mb-4">Inspirationsbilder</h3>
        <input
          type="file"
          accept="image/*"
          onChange={(e) => handleInspoUpload(e.target.files[0])}
          className="hidden"
          id="inspo-upload"
        />
        <label
          htmlFor="inspo-upload"
          className="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg cursor-pointer hover:bg-blue-700"
        >
          üì∑ Ladda upp inspirationsbild
        </label>
        <div className="grid grid-cols-2 md:grid-cols-3 gap-4 mt-4">
          {(project.brand?.referenceImages || []).map((img, index) => (
            <div key={index} className="group relative">
              <img src={img} alt="Inspiration" className="w-full h-48 object-cover rounded-lg" />
              <button
                onClick={() => removeInspo(index)}
                className="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 opacity-0 group-hover:opacity-100 transition"
              >
                √ó
              </button>
            </div>
          ))}
        </div>
      </div>

      {/* Notes */}
      <div className="bg-white p-6 rounded-xl border">
        <h3 className="font-semibold mb-4">Anteckningar</h3>
        <div className="flex gap-3 mb-4">
          <input
            type="text"
            value={newNote}
            onChange={(e) => setNewNote(e.target.value)}
            onKeyPress={(e) => e.key === 'Enter' && addNote()}
            placeholder="L√§gg till anteckning..."
            className="flex-1 px-3 py-2 border rounded-lg"
          />
          <button
            onClick={addNote}
            className="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
          >
            L√§gg till
          </button>
        </div>
        <div className="space-y-2">
          {(project.notes || []).map(note => (
            <div key={note.id} className="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <p className="text-sm">{note.text}</p>
              <button onClick={() => deleteNote(note.id)} className="text-red-600 hover:text-red-800">
                <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
  )
}
